<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sada.Model.Customer" table="CUSTOMER">
        <id name="customerId" type="int">
            <column name="CUSTOMERID" length="8"/>
            <generator class="assigned" />
        </id>
        <property name="customerName" type="java.lang.String">
            <column name="CUSTOMERNAME" length="15"/>
        </property>
        <property name="customerAddress" type="java.lang.String">
            <column name="CUSTOMERADDRESS" length="15"/>
        </property>
        
        <many-to-one class="com.sada.Model.Vendor" name="vendor" column="VENID" cascade="none" lazy="false"/>
    </class>
</hibernate-mapping>
